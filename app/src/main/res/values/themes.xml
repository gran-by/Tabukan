<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ForbiddenWords" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_lighter</item>
        <item name="colorPrimaryVariant">@color/orange_light</item>
        <item name="colorOnPrimary">@color/teal_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_darker</item>
        <item name="colorSecondaryVariant">@color/orange_darkest</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/assistant_regular</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.ForbiddenWords">
        <item name="android:textColorPrimary">@color/teal_dark</item>
        <item name="android:textColorSecondary">@color/teal_dark</item>
        <item name="actionMenuTextColor">@color/teal_dark</item>
    </style>
</resources>