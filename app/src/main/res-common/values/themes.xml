<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tabukan" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowBackground">@color/yellow3</item>

        <item name="colorPrimary">@color/honey9</item>

        <item name="colorSecondary">@color/orange_honey5</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/honey9</item>

        <item name="android:fontFamily">@font/assistant_regular</item>
        <item name="android:textColor">@color/brown_honey66</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.Tabukan">
        <item name="android:textColorPrimary">@color/brown_honey66</item>
        <item name="android:textColorSecondary">@color/brown_honey66</item>
        <item name="actionMenuTextColor">@color/brown_honey66</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>